auto_update               "yes"
bind_to_address           "localhost"
db_file                   "~/.mpd/tag_cache"
follow_inside_symlinks    "yes"
gapless_mp3_playback      "yes"
log_file                  "~/.mpd/mpd.log"
music_directory           "~/Music"
pid_file                  "~/.mpd/pid"
playlist_directory        "~/.mpd/playlists"
port                      "6600"
state_file                "~/.mpd/state"


input {
  plugin "curl"
}

audio_output {
  type            "osx"
  name            "Mac Output"
  mixer_type      "software"
}
