autocmd LocationChange .* :js modes.passAllKeys = /newsblur\.com|mail\.google\.com|www\.artlebedev\.ru|www.\.google\.ru\/reader|www\.google\.com\/reader\/view|docker\.com\/tryit/.test(buffer.URL)
